{
    "version": 2,
    "builds": [
        {
            "src": "**/*.php",
            "use": "vercel-php@0.7.1"
        }
    ],
    "routes": [
        {
            "handle": "filesystem"
        },
        {
            "src": "/api/(.*)",
            "dest": "/api/$1.php"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ]
}