{
    "version": 2,
    "builds": [
        {
            "src": "img/**",
            "use": "@vercel/static"
        },
        {
            "src": "*.css",
            "use": "@vercel/static"
        },
        {
            "src": "**/*.php",
            "use": "vercel-php@0.7.1"
        }
    ],
    "routes": [
        {
            "src": "/img/(.*)",
            "dest": "/img/$1"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/api/(.*)",
            "dest": "/api/$1.php"
        },
        {
            "src": "/",
            "dest": "/index.php"
        },
        {
            "src": "/(.*)",
            "dest": "/$1.php"
        }
    ]
}