{
    "version": 2,
    "builds": [
        {
            "src": "**/*.php",
            "use": "vercel-php@0.7.1"
        }
    ],
    "routes": [
        {
            "src": "/img/(.*)",
            "dest": "/img/$1"
        },
        {
            "src": "/api/(.*)",
            "dest": "/api/$1.php"
        },
        {
            "src": "/",
            "dest": "/index.php"
        },
        {
            "src": "/(.*).php",
            "dest": "/$1.php"
        },
        {
            "src": "/(.*)",
            "dest": "/$1.php"
        }
    ]
}